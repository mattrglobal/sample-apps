{
  "include": ["./src"],
  "exclude": ["./node_modules/*"],
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "ES2015",
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "types": ["node"],
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ES2015", "es2017.object"]
  }
}
